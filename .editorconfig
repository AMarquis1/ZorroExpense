root = true

[*.{kt,kts}]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
max_line_length = 200
trim_trailing_whitespace = true

# Disable function naming rule for Compose functions
ktlint_function-naming = disabled

# Set max line length to 200
ktlint_max-line-length = 200

# Disable generated file checks
[**/build/**]
ktlint_disabled_rules = *

# Disable checks for generated resource files
[**/generated/**]
ktlint_disabled_rules = *